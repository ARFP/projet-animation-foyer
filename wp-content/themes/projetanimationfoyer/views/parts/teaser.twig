{# parts/teaser.twig #}
<article class="tease tease-{{ post.type }}" id="tease-{{ post.ID }}">
    <a href="{{ post.link }}">
        <h2 class="h2">{{ post.title }}</h2>
        <div class="thumbnail">
            {% if post.thumbnail %}
                <img src="{{ post.thumbnail.src|resize(400, 300) }}" alt="{{ post.title }}">
            {% endif %}
        </div>
    </a>
    <div class="excerpt">
        {{ post.excerpt }}
    </div>
</article>